package com.ems.backend.model.dto;

import com.ems.backend.model.entity.User;

public class UserMapper {

	public static User mapToUser(UserDto userDto) {
		return new User(
					userDto.getId(),
					userDto.getUsername(),
					userDto.getPasswrod(),
					userDto.getEmail(),
					userDto.getRole()
				);
	}
	
	public static UserDto mapToUserDto(User user) {
		return new UserDto(
					user.getId(),
					user.getUsername(),
					user.getPassword(),
					user.getEmail(),
					user.getRole()
				);
	}
}
